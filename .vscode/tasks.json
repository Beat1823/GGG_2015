{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "cmd",
    "type": "shell",
    "args": ["/C"],
    "tasks": [
        {
            "label": "build and run",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": ["make","run"]
        },
        {
            "label": "run",
            "command": "${workspaceFolder}\\thirdparty\\blastem-win32-0.6.2\\blastem.exe",
            "args": [
                "${workspaceFolder}/out/rom.bin"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "group": "build",
            "label": "make",
            "dependsOrder": "sequence",
            "command": "${env:GDK}\\bin\\make",
            "args": [
                "-f",
                "${env:GDK}\\makefile.gen"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "dependsOn": ["compile data"],
            "problemMatcher": []
        },
                {
            "label": "compile data",
            "command": "python",
            "args": [
                "thirdparty\\scripts\\compile_data.py",
                "data\\scenes.txt",
                "data\\questions.csv",
                "data\\quizzes.txt",
                "src\\data_load.c"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "command": "${env:GDK}\\bin\\make",
            "args": [
                "clean",
                "-f",
                "${env:GDK}\\makefile.gen"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
